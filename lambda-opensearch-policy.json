{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "aoss:APIAccessAll"
            ],
            "Resource": "arn:aws:aoss:ap-southeast-2:*:collection/*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "aoss:ReadDocument",
                "aoss:WriteDocument",
                "aoss:CreateIndex",
                "aoss:DeleteIndex",
                "aoss:UpdateIndex",
                "aoss:DescribeIndex"
            ],
            "Resource": "arn:aws:aoss:ap-southeast-2:*:index/*/*"
        }
    ]
}